<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".FEEDING">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/background_linearname"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        >

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="19dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/sample_logo" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="FEED ME"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/dashboard_userEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="MARK RONIEL PENALIS"
            android:textColor="@color/Text_color"
            android:layout_marginRight="@dimen/_3sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:gravity="center"
            android:background="@drawable/name_background"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_465sdp"
        android:layout_marginTop="@dimen/_5sdp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_520sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginHorizontal="@dimen/_52sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="@dimen/_5sdp"
                    android:background="@drawable/feed_big_background">
                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/fish_white"
                        android:layout_marginTop="@dimen/_20sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="FEED NOW"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_dashboard"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/info"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"

                >

                <LinearLayout
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:gravity="center"
                    android:background="@drawable/button_color"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:elevation="@dimen/_2sdp">





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="12:00 AM"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:gravity="center"
                    android:background="@drawable/button_color"
                    android:orientation="vertical"
                    android:elevation="@dimen/_5sdp"
                    >




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:text="SET TIME"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"/>


                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:gravity="center"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/button_color"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:elevation="@dimen/_2sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="FEEDS"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/b2"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/feedStatus_textview"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:text="HALF FULL"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/button_color"
                        android:orientation="vertical"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="FISH"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/b2"
                            android:orientation="vertical">



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:text="10"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_20ssp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                >
                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:gravity="center"
                                    android:src="@drawable/minus"
                                    android:layout_marginRight="@dimen/_30sdp"
                                    android:background="@drawable/feed_big_background"
                                    />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:gravity="center"
                                    android:src="@drawable/add"
                                    android:background="@drawable/feed_big_background"
                                    />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/kavoon"
                            android:textColor="@color/Text_color"
                            android:text="Note: This is the status of feeds "/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/kavoon"
                            android:textColor="@color/Text_color"
                            android:text="Recommended no. of fish in the tank"/>
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:gravity="center"
                            android:fontFamily="@font/kavoon"
                            android:textSize="@dimen/_6ssp"
                            android:textColor="@color/Text_color"
                            android:text="55 TO 70"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_5sdp">


            <TextView
                android:id="@+id/feeding_btn_feed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_color"
                android:drawableStart="@drawable/fish"
                android:text="FEEDING"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sensor_btn_feed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_color"
                android:drawableStart="@drawable/value_icon"
                android:text="SENSOR VALUE"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>