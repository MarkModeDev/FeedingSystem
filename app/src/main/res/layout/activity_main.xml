<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".DashboardActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/background_linearname"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center">

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="19dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/sample_logo" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="FEED ME"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/name"
            android:paddingStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/name_background"
            />

    </LinearLayout>
    <!--para sa sensor -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_520sdp"
        android:layout_marginTop="@dimen/_5sdp"


        >

        <LinearLayout
            android:id="@+id/succes_constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_520sdp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_color"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"


                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="REALTIME DATA"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/b2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:id="@+id/amonia_progress"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            app:donut_finished_color="#C8C8C8"
                            app:donut_progress="10"
                            app:donut_unfinished_color="#3EB33E" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:gravity="center"
                            android:textColor="@color/Text_color"
                            android:text="AMONIA"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_color"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:background="@drawable/b2"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/fish_big"
                            android:layout_marginTop="@dimen/_20sdp"/>


                        <TextView
                            android:id="@+id/num_of_fish"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="5 Fishes"
                            android:textColor="@color/Text_color"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/button_color"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_2sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/deadly_background"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_100sdp"
                        android:text="DEADLY"/>

                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="67 - 200"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:background="@drawable/button_color"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_2sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/toxic"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_100sdp"
                        android:text="TOXIC"/>
                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="17 - 66"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:background="@drawable/button_color"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_2sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/safe"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_100sdp"
                        android:text="SAFE"/>
                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="0 - 16"/>

                </LinearLayout>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_dashboard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/info"
                        android:layout_alignParentRight="true"
                        />


                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:gravity="center"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/button_color"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:elevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/b2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/ph_progress"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                app:donut_progress="10"
                                app:donut_finished_color="#C8C8C8"
                                app:donut_unfinished_color="@color/DEADLY"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:text="PH LEVEL"
                                android:textColor="@color/Text_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/button_color"
                        android:orientation="vertical"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <RelativeLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/b2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">


                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/temperature_progress"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_centerInParent="true"
                                app:donut_finished_color="#C8C8C8"
                                app:donut_progress="10"
                                app:donut_unfinished_color="@color/DEADLY" />

                            <TextView
                                android:id="@+id/temperature_value"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:text="30ºC"
                                android:textColor="@color/Text_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/_45sdp"
                                android:background="@drawable/b2"
                                android:layout_marginTop="@dimen/_80sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:text="TEMPERATURE"
                                android:textColor="@color/Text_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:layout_below="@id/temperature_progress"
                                android:layout_marginBottom="@dimen/_50sdp"
                                android:gravity="center"/>

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/kavoon"
                            android:textColor="@color/Text_color"
                            android:text="RECOMMENDED TEMPERATURE "/>
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:gravity="center"
                            android:fontFamily="@font/kavoon"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/Text_color"
                            android:text="25° to 27°c"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/kavoon"
                            android:textColor="@color/Text_color"
                            android:text="RECOMMENDED PH LEVEL"/>
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:gravity="center"
                            android:fontFamily="@font/kavoon"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/Text_color"
                            android:text="6.8 to 7.8"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>


    </ScrollView>


    <!--para sa navigation -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_5sdp">


            <TextView
                android:id="@+id/feeding_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_color"
                android:drawableStart="@drawable/fish"
                android:text="FEEDING"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sensor_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_color"
                android:drawableStart="@drawable/value_icon"
                android:text="SENSOR VALUE"/>


        </LinearLayout>

    </LinearLayout>




</LinearLayout>