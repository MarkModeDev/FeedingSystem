<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseRegistrationActivity"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/sign_up_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_55sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:text="Choose ways to register an account"
            android:textColor="@color/Text_color"
            android:layout_marginTop="@dimen/_150sdp"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/otp_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="OTP"/>

        <TextView
            android:id="@+id/email_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_165sdp"
            android:text="EMAIL"/>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:id="@+id/circle"
            >

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/button_color" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/code_background" />

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/code_background" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>