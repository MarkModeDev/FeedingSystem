<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerificationActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/code_linear">

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:text="OTP Verification"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:text="An OTP verification number successfully sent to"
            android:textColor="@color/Text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/user_mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:text="+63-"
            android:textColor="@color/Text_color"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

            <EditText
                android:id="@+id/code2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

            <EditText
                android:id="@+id/code3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

            <EditText
                android:id="@+id/code4"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

            <EditText
                android:id="@+id/code5"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

            <EditText
                android:id="@+id/code6"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/Text_color"
                android:background="@drawable/code_background"
                android:textSize="@dimen/_15ssp"
                tools:ignore="LabelFor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="Didn't get the code?"/>
            <TextView
                android:id="@+id/textResendOTP"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:text="RESEND"
                android:textColor="#0080FF"
                android:textStyle="bold"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_50sdp">

            <TextView
                android:id="@+id/validate_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_40sdp"
                android:background="@drawable/button_color"
                android:elevation="@dimen/_2sdp"
                android:gravity="center"
                android:text="VERIFY"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:background="@color/Text_color"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"

            >

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/button_color" />

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/button_color" />

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/button_color" />


        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>